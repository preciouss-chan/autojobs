{
  "manifest_version": 3,
  "name": "Auto Apply AI",
  "version": "1.0",
  "description": "Tailor resumes and manually upload them on application pages.",

  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://*/*", "http://*/*"],

  "action": {
    "default_popup": "popup/popup.html"
  },

  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["data/resume.json"],
      "matches": ["<all_urls>"]
    }
  ]
}

